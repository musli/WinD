<Page x:Class="Musli.Plug_ins.Calculator.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Musli.Plug_ins.Calculator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid Background="White">
        <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox x:Name="txtNum1" Width="80"></TextBox>
            <TextBlock VerticalAlignment="Center" Text="+"></TextBlock>
            <TextBox x:Name="txtNum2" Width="80"></TextBox>
            <TextBlock VerticalAlignment="Center" Text="="></TextBlock>
            <TextBox x:Name="txtResult" Width="80"></TextBox>
            <Button Margin="20,0,0,0" Content="计算" Click="Button_Click"></Button>
        </WrapPanel>
    </Grid>
</Page>
