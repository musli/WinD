<Application x:Class="WinD.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:convert="clr-namespace:WinD.Converts"
             xmlns:local="clr-namespace:WinD"
             StartupUri="/View/DesktopWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/SkinDefault.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml"/>
                <ResourceDictionary Source="/Styles/HandyControlColor.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <convert:DoubleMagnificationConvert x:Key="DoubleMagnificationConvert"/>
            <Style TargetType="FrameworkElement">
                <Setter Property="Focusable" Value="False"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
